<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:background="@color/colorAccent"
    tools:background="@color/colorAccent">

    <TextView

        android:id="@+id/textViewQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"

        android:textColor="@color/recipeHeaderText"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        tools:text="1" />

    <TextView

        android:id="@+id/textViewMeasure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"

        android:textColor="@color/recipeHeaderText"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/textViewQuantity"
        android:layout_toStartOf="@id/ingredient_unit_icon"
        tools:text="Oz" />

    <TextView

        android:id="@+id/textViewIngredient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="8dp"
        android:padding="4dp"


        android:textColor="@color/recipeHeaderText"
        android:layout_below="@id/textViewQuantity"
        android:layout_centerInParent="true"
        tools:text="Baking powder" />

    <ImageView
        android:id="@+id/ingredient_unit_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="4dp"
        tools:srcCompat="@drawable/ic_cup_of_tea" />
</RelativeLayout>